{
   "manifest_version": 3,
   "version": "7.1.1",
   "name": "HDrezka Helper",
   "description": "__MSG_extDesc__",
   "default_locale": "en",
   "icons": {
      "128": "images/logo.png"
   },
   "permissions": [
      "storage", "activeTab", "tabs", "scripting"
   ],
   "host_permissions": ["http://*/*","https://*/*"],
   "background": {
      "scripts": ["background.js"]
   },
   "options_ui": {
      "open_in_tab": true,
      "page": "menu/options.html"
   },
   "action": {
      "default_popup": "menu/options.html",
      "default_icon": {
         "128": "images/logo_gray.png"
      }
   },
   "homepage_url": "https://github.com/SuperZombi/HDrezka-downloader",
   "browser_specific_settings": {
      "gecko": {
         "id": "super.zombi.yt@gmail.com",
         "strict_min_version": "109.0"
      }
   }
}
